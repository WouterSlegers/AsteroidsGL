<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="bottom"
    android:padding="@dimen/padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/gamepad">

    <Button
        android:id="@+id/keypad_left"
        android:scaleX="@dimen/direction_arrow_scale"
        android:scaleY="@dimen/direction_arrow_scale"
        android:layout_width="@dimen/keypad_size"
        android:layout_height="@dimen/keypad_size"
        android:layout_alignParentStart="true"
        android:background="@drawable/arrow_left" />

    <Button
        android:id="@+id/keypad_right"
        android:scaleX="@dimen/direction_arrow_scale"
        android:scaleY="@dimen/direction_arrow_scale"
        android:layout_width="@dimen/keypad_size"
        android:layout_height="@dimen/keypad_size"
        android:layout_marginStart="48dp"
        android:layout_toEndOf="@+id/keypad_left"
        android:background="@drawable/ic_keyboard_arrow_right_24px" />

    <Button
        android:id="@+id/keypad_b"
        android:scaleX="@dimen/up_arrow_scaleX"
        android:scaleY="@dimen/up_arrow_scaleY"
        android:layout_width="@dimen/keypad_size"
        android:layout_height="@dimen/keypad_size"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_arrow_drop_up_24px" />

    <Button
        android:id="@+id/keypad_a"
        android:layout_width="@dimen/keypad_size"
        android:layout_height="@dimen/keypad_size"
        android:layout_marginEnd="48dp"
        android:layout_toStartOf="@+id/keypad_b"
        android:background="@drawable/circle_in_circle" />
</RelativeLayout>